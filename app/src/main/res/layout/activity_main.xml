<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:layout_marginTop="100dp">


        <Button
            android:id="@+id/screen_4_button1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.07"
            android:layout_margin="7dp"
            android:background="@drawable/button_colours"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20dp"
            android:text="Configure field irrigation" />
        <Button
            android:id="@+id/screen_4_button2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.07"
            android:layout_margin="7dp"
            android:background="@drawable/button_colours"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20dp"
            android:text="Configure field fertigation" />

        <Button
            android:id="@+id/screen_4_button3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.07"
            android:layout_margin="7dp"
            android:background="@drawable/button_colours"
            android:gravity="center"
            android:padding="5dp"
            android:text="Configure Pump Filtration"
            android:textSize="20dp" />

        <Button
            android:id="@+id/screen_4_button4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.07"
            android:layout_margin="7dp"
            android:background="@drawable/button_colours"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20dp"
            android:text="Print report for field status" />
        <Button
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.07"
            android:layout_margin="7dp"
            android:background="@drawable/button_colours"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20dp"
            android:text="Settings" />
        <TextView
            android:id="@+id/screen_4_status"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:gravity="center"
            android:hint="Status"
            android:textColor="@color/sandcolor"
            android:textColorHint="@color/sandcolor"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>