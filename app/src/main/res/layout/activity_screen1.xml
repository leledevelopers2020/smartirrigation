<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.Screen_1">


    <include
        android:id="@+id/include"
        layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/include"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="Select Connection type with system"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/screen_1_gsm_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.07"
            android:background="@drawable/button_colours"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20dp"
            android:text="GSM/Phone Number" />
        <Button
            android:id="@+id/screen_1_wifi_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.07"
            android:layout_margin="7dp"
            android:background="@drawable/button_colours"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20dp"
            android:text="Wi-Fi" />

        <TextView
            android:id="@+id/screen_1_status"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:gravity="center"
            android:hint="Status"
            android:textColor="@color/sandcolor"
            android:textColorHint="@color/sandcolor"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>