<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--Create a layer list and add item of shape "Rectangle to it"-->
    <item>
        <rotate
            android:fromDegrees="90"
            android:toDegrees="0">
            <shape
                android:shape="line"
                android:top="1dp">
                <stroke
                    android:width="2dp"
                    />
            </shape>
        </rotate>
    </item>
</layer-list>